{
  "permissions": {
    "allow": [
      "Bash(git remote add:*)",
      "Bash(git commit:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/check-js-conventions.sh",
            "timeout": 5,
            "statusMessage": "Verification conventions JS..."
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/check-css-conventions.sh",
            "timeout": 5,
            "statusMessage": "Verification conventions CSS..."
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/check-manifest-urls.sh",
            "timeout": 10,
            "statusMessage": "Verification manifest.xml avant push..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/check-config-impact.sh",
            "timeout": 5,
            "statusMessage": "Verification impacts config.js..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/check-cache-bust.sh",
            "timeout": 10,
            "statusMessage": "Verification coherence cache bust..."
          }
        ]
      }
    ]
  }
}
